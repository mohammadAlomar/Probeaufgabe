@model IEnumerable<CompanyViewModel>
@{

    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="btn btn-primary" asp-area="" asp-controller="Company" asp-action="Register">Register New Company</a>
        </li>

    </ul>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">CompanyNr</th>
                <th scope="col">CompanyName</th>
                <th scope="col">EmailAddress</th>
                <th scope="col">Action</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in Model)
            {
            <tr>
                <td>@result.CompanyNr</td>
                <td>@result.CompanyName</td>
                <td>@result.EmailAddress</td>
                <td><a class="btn-success" asp-route-id="@result.CompanyId" asp-controller="Company" asp-action="Edit">Edit</a></td>
                
                <td><form asp-route-id="@result.CompanyId" asp-action="Delete" asp-controller="Company" method="post">
                    <button class="btn-danger" type="submit" onclick="return confirm('Are you Sure you want to Delete : @result.CompanyName .')">Delete</button>
                    </form>
                </td>

            </tr>
            }


        </tbody>
    </table>
}
