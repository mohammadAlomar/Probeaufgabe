{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchDepTypes": ["direct"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "Target Framework Updates",
      "commitMessage": "chore(deps): update target framework version",
      "postUpgradeTasks": {
        "commands": [
          {
            "runner": "dotnet",
            "command": "migrate"
          },
          {
            "runner": "shell",
            "command": "sed -i 's/<TargetFramework>netcoreapp3.1<\\/TargetFramework>/<TargetFramework>netcoreapp6.0<\\/TargetFramework>/' project.csproj"
          }
        ],
        "fileFilters": ["**/*.csproj"],
        "executionMode": "update"
      }
    }
  ]
}
