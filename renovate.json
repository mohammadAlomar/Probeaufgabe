{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "Target Framework Updates",
      "commitMessage": "chore(deps): update target framework version",
      "postUpgradeTasks": [
        {
          "runner": "text",
          "fileMatch": ["**/*.csproj"],
          "matchStrings": ["<TargetFramework>(.*?)<\\/TargetFramework>"],
          "replaceStrings": ["<TargetFramework>{{{updatedVersion}}}</TargetFramework>"]
        }
      ]
    }
  ]
}
