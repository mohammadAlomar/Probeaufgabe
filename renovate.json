{
  "extends": ["@renovate/configure"],
  "updateTargetBranches": ["master"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchDepTypes": ["direct"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchTargetBranches": ["master"],
      "groupName": "Target Framework Updates",
      "commitMessage": "chore(deps): update target framework version",
      "commitMessageTopic": "{{depName}}",
      "updateTasks": [
        {
          "runner": "text",
          "fileMatch": ["**/*.csproj"],
          "replaceText": {
            "find": "<TargetFramework>netcoreapp3.1</TargetFramework>",
            "replace": "<TargetFramework>{{{updatedVersion}}}</TargetFramework>"
          }
        }
      ]
    }
  ]
}
